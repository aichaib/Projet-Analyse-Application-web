<section class="users-list-container">
  <h1 class="title">Gestion des utilisateurs</h1>

  <div class="table-container">
    <table class="users-table">
      <thead>
        <tr>
          <th>Prénom</th>
          <th>Nom</th>
          <th>Email</th>
          <th>Rôle</th>
          <th>Inscrit le</th>
          <th>Dernière connexion</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
        <tr>
          <td>{{this.prenom}}</td>
          <td>{{this.nom}}</td>
          <td>{{this.email}}</td>
          <td>{{#if this.isAdmin}}Admin{{else}}Utilisateur{{/if}}</td>
          <td>{{this.createdAt}}</td>
          <td>{{#if this.lastLogin}}{{this.lastLogin}}{{else}}Jamais{{/if}}</td>
          <td class="actions-cell">
            <a href="/admin/utilisateurs/{{this.id}}/edit" class="btn-modifier">Modifier</a>
            <form method="POST" action="/admin/utilisateurs/{{this.id}}/delete" style="display:inline"
              onsubmit="return confirmDelete()">
              <button type="submit" class="btn-supprimer">Supprimer</button>
            </form>


          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <div class="retour">
    <a href="/accueil/admin" class="btn-retour">← Retour</a>
  </div>
</section>
<script src="/js/gestionUser.js"></script>