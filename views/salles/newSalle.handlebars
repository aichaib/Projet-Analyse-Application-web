<section class="formulaire-salle">
  <h1 class="title">Ajouter une nouvelle salle</h1>

  <form id="formSalle" class="formulaire">
    <div class="form-group">
      <label for="nom">Nom :</label>
      <input type="text" id="nom" required>
    </div>

    <div class="form-group">
      <label for="capacite">Capacité :</label>
      <input type="number" id="capacite" required>
    </div>

    <div class="form-group">
      <label for="equipement">Équipement :</label>
      <select id="equipement" multiple required>
        <option value="">-- Sélectionnez un équipement --</option>
        {{#each equipements}}
          <option value="{{this.id}}">{{this.nom}}</option>
        {{/each}}
      </select>
    </div>

    <div class="form-group">
      <label for="emplacement">Emplacement :</label>
      <input type="text" id="emplacement" required>
    </div>

    <button type="submit" class="btn-envoyer">Créer</button>
  </form>

  <div class="retour">
    <a href="/accueil/admin" class="btn-retour">← Retour</a>
  </div>
</section>
