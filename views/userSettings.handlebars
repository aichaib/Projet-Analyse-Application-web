<div class="form-container">
  <h1 class="titre-formulaire">Paramètres du compte</h1>

  <form id="settings-form" class="formulaire">
    <div class="groupe-formulaire">
      <label for="prenom">Prénom</label>
      <input type="text" id="prenom" name="prenom" value="{{user.prenom}}" required />
    </div>

    <div class="groupe-formulaire">
      <label for="nom">Nom</label>
      <input type="text" id="nom" name="nom" value="{{user.nom}}" required />
    </div>

    <div class="groupe-formulaire">
      <label for="email">Adresse e-mail</label>
      <input type="email" id="email" name="email" value="{{user.email}}" required />
    </div>

    <button type="submit" class="btn-formulaire">Enregistrer</button>
    <div id="settings-status" class="info-formulaire"></div>
  </form>
</div>

<script src="/js/userSettings.js"></script>
