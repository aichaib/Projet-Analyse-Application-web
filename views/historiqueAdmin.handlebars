<div class="page-admin-bg">
  <div class="container">
    <section class="col-lg-9">
      <div class="card main-card">
        <div class="card-body">
          <h2 class="dashboard-title">Historique de mes actions</h2>

          {{#if historique.length}}
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Action</th>
                  <th>Détails</th>
                  <th>Date</th>
                </tr>
              </thead>
              <tbody>
                {{#each historique}}
                  <tr>
                    <td>{{action}}</td>
                    <td>{{details}}</td>
                    <td>{{timestamp}}</td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          {{else}}
            <p>Aucune action enregistrée.</p>
          {{/if}}
        </div>
      </div>

      <div class="retour">
        <a href="/accueil/admin" class="btn-retour">Retour au tableau de bord</a>
      </div>
    </section>
  </div>
</div>
