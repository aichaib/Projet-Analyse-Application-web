<div style="width: 100%; max-width: 1400px; margin: 0 auto; display: flex; align-items: center; justify-content: space-between; padding-top: 90px; padding-bottom: 0.5rem;">
  <div></div>
  <h1 class="dashboard-title" style="margin-bottom: 0; text-align: center; flex: 1;">{{titre}}</h1>
  <a href="/accueil/user" class="btn-retour btn-retour-blanc">← Retour</a>
</div>
<div class="content-area page-admin-bg">
  {{#if reservations.length}}
  <div class="history-grid-mini">
    {{#each reservations}}
    <div class="history-mini-card">
      <div class="history-mini-header">{{this.salle.nom}}</div>
      <div class="history-mini-info">
        <p><strong>Date :</strong> {{this.dateUtilisationStr}}</p>
        <p><strong>Heure :</strong> {{this.heureDebutStr}} – {{this.heureFinStr}}</p>
      </div>
    </div>
    {{/each}}
  </div>
  {{else}}
  <p class="no-reservations">Vous n'avez aucune réservation passée.</p>
  {{/if}}
</div>
