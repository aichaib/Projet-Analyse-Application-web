<div class="formulaire-equipement">
  <h1 class="title">Modifier un équipement</h1>
  <form id="editEquipementForm" action="/equipement/modifier/{{equipement.id}}" method="POST">
    <div class="form-group">
      <label for="nom">Nom de l’équipement</label>
      <input
        type="text"
        id="nom"
        name="nom"
        value="{{equipement.nom}}"
        required
      />
    </div>

    <div class="form-actions">
      <button type="submit" class="btn btn-primary">Enregistrer</button>
      <a href="/list/equipement" class="btn btn-secondary">Annuler</a>
    </div>
  </form>

   <div class="retour">
        <a href="/list/equipement" class="btn-retour">Retour à la liste des équipements</a>
      </div>
</div>
