<div class="page-avec-sidebar">
    <!-- Menu latéral -->
    <aside class="sidebar">
        <nav class="calendar-nav">
            <a href="/accueil/user" class="nav-item">
                <i class="bi bi-arrow-left"></i> Retour
            </a>
        </nav>
    </aside>

    <!-- Contenu principal du calendrier -->
    <div class="main-calendar-content">
        <section class="reservations-calendar">
            <!-- En-tête avec navigation mois -->
            <div class="calendar-header"
                 data-month="{{month}}"
                 data-year="{{year}}">
                <button id="prevMonth" class="nav-month">&lt;</button>
                <h2>{{monthYear}}</h2>
                <button id="nextMonth" class="nav-month">&gt;</button>
            </div>

            <!-- Jours de la semaine -->
            <div class="calendar-weekdays">
                {{#each weekdays}}
                <div class="weekday">{{this}}</div>
                {{/each}}
            </div>

            <!-- Grille des jours -->
            <div class="calendar-days">
                {{#each days}}
                <div class="calendar-day
                  {{#unless inMonth}}other-month{{/unless}}
                  {{#if reservations.length}} reserved{{/if}}">
                    <div class="day-number">{{day}}</div>

                    {{#each reservations}}
                    <div class="event" data-reservation-id="{{id}}">
                        <div class="event-room">{{salle.nom}}</div>
                        <div class="event-time">
                            {{formatTime dateDebut}} – {{formatTime dateFin}}
                        </div>
                        <div class="event-actions">
                            <button class="btn-modifier-event">
                                <i class="bi bi-pencil-square"></i>
                            </button>
                            <button class="btn-supprimer-event">
                                <i class="bi bi-x-circle"></i>
                            </button>
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{/each}}
            </div>
        </section>
    </div>
</div>

<!-- Modal de confirmation/modification -->
<div id="calendar-modal" class="calendar-modal" style="display:none;">
  <div class="calendar-modal-content">
    <span class="calendar-modal-close" id="calendar-modal-close">&times;</span>
    <div id="calendar-modal-body"></div>
  </div>
</div>
