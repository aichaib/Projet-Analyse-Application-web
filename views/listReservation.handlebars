<h2>Mes réservations</h2>
<table>
    <thead>
        <tr>
            <th>Salle</th>
            <th>Date début</th>
            <th>Date fin</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each reservations}}
        <tr>
            <td>{{salle.nom}}</td>
            <td>{{dateDebut}}</td>
            <td>{{dateFin}}</td>
            <td>
                <form method="POST" action="/reservations/{{id}}?_method=DELETE">
                    <button type="submit">Annuler</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<a href="/reservations/new">Nouvelle réservation</a> 