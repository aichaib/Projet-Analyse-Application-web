<section id="login-section" class="container form-section">
  <h2>Connexion Utilisateur</h2>
  <form class="form needs-validation user-login-form">
    <div class="form-group">
      <label for="user-email">Adresse e-mail</label>
      <input type="email" id="user-email" name="email" class="form-control" placeholder="utilisateur@exemple.com" required />
    </div>
    <div class="form-group">
      <label for="user-password">Mot de passe</label>
      <input type="password" id="user-password" name="motDePasse" class="form-control" placeholder="••••••••" required />
    </div>
    <button type="submit" class="btn form-btn">Se connecter</button>
  </form>
</section>